{
  "meta": {
    "options": {
      "linkedFile": "/views/master.ejs",
      "linkedForm": "cadastrar"
    },
    "$_POST": [
      {
        "type": "text",
        "fieldName": "nome",
        "options": {
          "rules": {
            "core:required": {
              "message": "Campo obrigatorio."
            }
          }
        },
        "name": "nome"
      },
      {
        "type": "text",
        "fieldName": "email",
        "options": {
          "rules": {
            "core:email": {
              "message": "Use um e-mail v√°lido."
            },
            "core:required": {
              "message": "Campo obrigatorio."
            }
          }
        },
        "name": "email"
      },
      {
        "type": "text",
        "fieldName": "senha",
        "options": {
          "rules": {
            "core:required": {
              "message": "Campo obrigatorio."
            }
          }
        },
        "name": "senha"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "hash",
        "module": "crypto",
        "action": "passwordHash",
        "options": {
          "algo": "argon2id",
          "password": "{{$_POST.senha}}"
        },
        "outputType": "text"
      },
      {
        "name": "insertCadastrar",
        "module": "dbupdater",
        "action": "insert",
        "options": {
          "connection": "db",
          "sql": {
            "type": "insert",
            "values": [
              {
                "table": "usuarios",
                "column": "nome-completo",
                "type": "text",
                "value": "{{$_POST.nome}}"
              },
              {
                "table": "usuarios",
                "column": "email",
                "type": "text",
                "value": "{{$_POST.email}}"
              },
              {
                "table": "usuarios",
                "column": "senha",
                "type": "text",
                "value": "{{hash}}"
              },
              {
                "table": "usuarios",
                "column": "admin",
                "type": "boolean",
                "value": "1"
              }
            ],
            "table": "usuarios",
            "returning": "id",
            "query": "insert into `usuarios` (`admin`, `email`, `nome-completo`, `senha`) values (?, ?, ?, ?)",
            "params": [
              {
                "name": ":P1",
                "type": "expression",
                "value": "{{$_POST.nome}}",
                "test": ""
              },
              {
                "name": ":P2",
                "type": "expression",
                "value": "{{$_POST.email}}",
                "test": ""
              },
              {
                "name": ":P3",
                "type": "expression",
                "value": "{{hash}}",
                "test": ""
              }
            ]
          }
        },
        "meta": [
          {
            "name": "identity",
            "type": "text"
          },
          {
            "name": "affected",
            "type": "number"
          }
        ]
      }
    ]
  },
  "usedModules": {
    "argon2": "^0.30.2"
  }
}